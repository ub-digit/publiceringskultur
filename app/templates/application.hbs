{{partial 'partials/gu-header'}}

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center">
			<h1 id="title">{{t "top.heading"}}</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<p class="lead">{{t "top.intro"}}</p>
		</div>
	</div>

	<div class="row selector-row">
		<div class="col-xs-12 text-center">
			{{faculty-selector faculties=faculties currentFaculty=currentFaculty setFaculty="setFaculty" gotoUniversity="gotoUniversity"}}
		</div>
	</div>

	{{outlet}}

	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
			<h3>{{t "bottom.heading"}}</h3>
			<p>{{t "bottom.text"}}</p>
		</div>
	</div>
</div>

{{partial 'partials/gu-footer'}}
